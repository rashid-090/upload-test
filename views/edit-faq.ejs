<%- include('includes/head.ejs') %>
<title>faq</title>
</head>
<body>
  
   
    <div class="edit-section">
      <section>
        <div class="section">
            <div class="p-6">
                <a href="/admin/faq"
                    type="submit"
                    id="sentbutton"
                    class="text-4xl m-2 text-zinc-600 hover:text-violet-700 "
                  ><i class="fa-solid fa-circle-arrow-left bg-white rounded-full "></i></a>
            </div>
    <h1 class="text-3xl font-bold pl-7 pt-4">FAQ</h1>
    <div class="container">
        <div class="lg:w-2/3 p-7">
          <form action="/admin/<%= faq.id %>/faq?_method=PUT" method="POST">
        
               <div class="pb-4">
                <p class="pb-2 font-medium text-base tracking-wide">Main Heading</p>
                <input class="outline-none bg-zinc-700 rounded-md py-2 pl-4 w-full" type="text" value="<%= faq.heading %>" name="heading" placeholder="Web development" required/>
            </div>
           
             <div class="pb-4">
                <p class="pb-2 font-medium text-base tracking-wide">FAQ Question</p>
                <input class="outline-none bg-zinc-700 rounded-md py-2 pl-4 w-full" type="text" value="<%= faq.question %>" name="question" placeholder="How long does it take you to design a website on average?" required/>
            </div>
           
             <div class="pb-4">
                <p class="pb-2 font-medium text-base tracking-wide">FAQ Answer</p>

                <textarea
                    class="outline-none bg-zinc-700 rounded-md py-2 px-4 w-full md:h-20"
                    name="answer"
                    id="answer"
                    
                    placeholder="The total time it takes to build a website is determined by a number "
                    required
                  ><%= faq.answer %></textarea>
            </div>
           
            <div class="flex lg:justify-end">
              <button
              type="submit" class="bg-violet-800 py-3 px-6 mr-5 rounded-lg hover:bg-violet-900"><a href="/admin/faq">Cancel</a></button>
                <button type="submit" class="bg-violet-800 py-3 px-6 rounded-lg hover:bg-violet-900">Save</button>
            </div>
            </form>
        </div>


    </div>


    
  </div>
      </section>


        
    </div>
 
    <%- include('includes/end.ejs') %>
 

  
